{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["seams"],
  "properties": {
    "manifest_version": {"type": "string"},
    "last_updated": {"type": "string", "format": "date"},
    "seams": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "description", "status", "components", "tags"],
        "properties": {
          "id": {"type": "string", "pattern": "^[a-z-]+$"},
          "description": {"type": "string", "minLength": 10},
          "status": {"enum": ["IMPLEMENTED", "PLANNED", "DEFERRED", "DUPLICATE"]},
          "components": {"type": "array", "items": {"type": "string"}},
          "location": {"type": ["string", "null"]},
          "plan_source": {"type": "string"},
          "priority": {"type": ["string", "null"], "enum": ["P0", "P1", "P2", null]},
          "tags": {"type": "array", "items": {"type": "string"}},
          "depends_on": {"type": "array", "items": {"type": "string"}},
          "related_seams": {"type": "array", "items": {"type": "string"}}
        }
      }
    }
  }
}